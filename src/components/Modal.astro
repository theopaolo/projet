---
const { buttonName, title } = Astro.props;
---

<div x-data="{ modalOpen: false }" class="flex-1 aspect-[2/1]" @keydown.escape.window="modalOpen = false">
        <button @click="modalOpen=true" class="bg-accent w-full h-full rounded-lg p-4 border border-indigo-400 shadow-inner transition-colors group hover:bg-light active:bg-blend-lighten focus:bg-light focus:outline-none focus:ring-2 focus:ring-neutral-200/60 focus:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none" id="contact">
            <h3 class="title-container flex text-3xl items-center h-full justify-center font-serif text-light group-hover:text-accent active:text-accent">
                <span class="title font-serif">{buttonName}</span>
            </h3>
        </button>
    <template x-teleport="body">
        <div x-show="modalOpen"
            class="fixed top-0 left-0 z-[99] flex items-center justify-center w-screen h-screen"
            x-cloak>
            <div x-show="modalOpen"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0"
                x-transition:enter-end="opacity-100"
                x-transition:leave="ease-in duration-300"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                @click="modalOpen=false"
                class="absolute inset-0 w-full h-full bg-black bg-opacity-40"></div>

                <div x-show="modalOpen" x-trap.inert.noscroll="modalOpen"
                    x-transition:enter="ease-out duration-300"
                    x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                    x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                    x-transition:leave="ease-in duration-200"
                    x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                    x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                    class="modal-box relative z-[999] w-full max-w-screen-md py-6 px-7 border border-light p-4 rounded-xl w-screen-lg mx-auto">
                    <div class="flex items-center justify-between pb-2">
                        <h3 class="text-3xl font-semibold">{title}</h3>
                        <button @click="modalOpen=false"
                            class="absolute top-0 right-0 flex items-center justify-center w-8 h-8 mt-5 mr-5 text-gray-600 rounded-full hover:text-gray-800 hover:bg-gray-50">
                            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
                        </button>
                    </div>
                    <div class="relative w-auto">
                        <slot></slot>
                    </div>
                </div>
            </div>
    </template>
</div>

<style >
    .modal-box:after {
        @apply rounded-xl absolute top-0 left-0 w-full h-full;
        content: "";
        background-color: rgba(200,190,210,0.6);
        -webkit-backdrop-filter: blur(10px);
        backdrop-filter: blur(10px);
        z-index: -1;
    }
</style>